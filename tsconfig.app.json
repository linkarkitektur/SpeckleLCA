{
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],

  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "baseUrl": ".",
    "ignoreDeprecations": "5.0",
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES5",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node", "vitest/globals", "vite/client"]
  }
}
